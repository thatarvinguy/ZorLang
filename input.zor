<loopAdd(start, add, numberOfTimes)
    total = start;
    index = 0;
    [(index < numberOfTimes)
        total = total + add;
        index = index + 1;
    ]
    $ total;
>

newValue = ((@loopAdd(10, 5, 2) + @loopAdd(20, 10, 3)) * 2) ;

{(newValue >= 1000)
    # 4;
}
{?(newValue >= 100)
    # 3;
}
{?(newValue >= 10)
    # 2;
}
{?
    # 1;
}
# newValue;
